<div class="container">
	<br />
	<div class="panel panel-info">
		<div class="panel-heading">Account Settings</div>
		  <!-- List group -->
		  <ul class="list-group">
		    <li class="list-group-item"><strong>Username:</strong> {{username}} 
		    </li>
		    <li class="list-group-item"><strong>Display name:</strong> {{displayName}}
		    	<a href="#displayName" style="float: right;">Change</a>
		    </li>
		    <li class="list-group-item"><strong>Email:</strong> {{email}}
		    	<a href="#email" style="float: right;">Change</a>
		    </li>
		    <li class="list-group-item"><strong>Password:</strong> *******
		    	<a href="#password" style="float: right;">Change</a>
		    </li>
		  </ul>
		</div>

		<hr />
		<!-- Begin form for changing display name -->
		<a name="displayName" class="anchor">
			Change your display name
		</a><br /><br />
		<form action="/settings/changeName" method="post">
			<div class="form-group">
			<label>New display name</label>
			<input type="displayName" class="form-control" name="displayName" placeholder="Enter new display name" required>
			</div>

			<button type="submit" class="btn btn-default">Change</button>
		</form>

		<hr />

		<!-- Begin form for changing email -->
		<a name="email" class="anchor">
			Change your e-mail address
		</a><br /><br />
		<form action="/settings/changeEmail" method="post">
			<div class="form-group">
			<label>New e-mail address</label>
			<input type="email" class="form-control" name="email" placeholder="Enter new e-mail" required>
			</div>

			<button type="submit" class="btn btn-default">Change</button>
		</form>

		<hr />

		<!-- Begin form for changing password -->
		<a name="password" class="anchor">
			Change your password
		</a><br /><br />
		<form action="/settings/changePassword" method="post">
			<div class="form-group">
			<label>New password</label>
			<input type="password" name="password" id="pass1" class="form-control" placeholder="Enter new password" required>
			</div>

			<div class="form-group">
			<label>Confirm password</label>
			<input type="password" name="password2" id="pass2" class="form-control" placeholder="Enter same password again" onkeyup="checkPass(); return false;" required>
			<span id="confirmMessage" class="confirmMessage"></span>
			</div>

			<button type="submit" class="btn btn-default">Change</button>
		</form>
		<br /><br />
</div>

<script type="text/javascript" src="/js/passwordValidator.js"></script>