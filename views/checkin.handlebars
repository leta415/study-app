<div class="container">
  <h3>Check In to a Nearby Location</h3><br />
  <form id="checkin">
  	{{#each nearby}}
	<div class="radio">
	  <label>
	    <input type="radio" name="location" id="optionRadio" value="{{name}}">
	    {{name}}
	  </label>
	</div>
	{{/each}}
	<br /><button type="button" data-toggle="modal" id="submitBtn" data-target="#confirm-submit" class="btn btn-default">Check in</button>
  </form>
</div>

<!-- First modal pop up that will confirm user input from radio selection -->
<div class="modal fade" id="confirm-submit" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
              <div class="modal-header">
                  Confirm Submit
              </div>
              <div class="modal-body">
                  Are you sure you want to check in to <strong><span id="location"></span></strong>?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" id="submit" data-toggle="modal" data-target="#confirm-choice" data-dismiss="modal" class="btn btn-success success">Yes</a>
              </div>
          </div>
    </div>
</div>

<!-- Second modal pop up that will confirm user's choice -->
<div class="modal fade" id="confirm-choice" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                Check In Successful!
            </div>
            <div class="modal-footer">
                <a href="/" data-toggle="modal" class="btn btn-success success">Okay</a>
            </div>
          </div>
    </div>
</div>


