<div class="container">
  <form class="form-signin" action="/local-reg" id="local-reg" method="post">
    <h2 class="form-signin-heading">Sign Up</h2><br />
    <input type="username" name="username" class="form-control" placeholder="Username" required autofocus>
    <br />
    <input type="displayname" name="displayname" class="form-control" placeholder="Display Name" required autofocus>
    <br />
    <input type="email" name="email" class="form-control" placeholder="E-mail" required autofocus>
    <br />
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <br />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  </form>
</div>