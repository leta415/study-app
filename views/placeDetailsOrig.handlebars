
<!--modal for adding bookmarks -->
<div id="bookmarkModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h3 class="modal-title" id="myModalLabel">Favorite</h3>
      </div>
      <div class="modal-body">
          <p> Are you sure you want to add <strong><span id="location"></span></strong> to your faovirtes?</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" data-dismiss="modal" class="btn btn-primary" id="btnAdd">Confirm</button>
      </div>
    </div>
  </div>
</div> 
<!-- End of modal -->

<!--modal for warning already existed bookmark -->
<div id="bookmarkExisted" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h3 class="modal-title" id="myModalLabel">Oops</h3>
      </div>
      <div class="modal-body">
          <p> You have already added this place to your favorites!</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div> 
<!-- End of modal -->

<div class="container">
      <!-- Search -->
      <div id="search-place-details-row" class="top-search row">
        <div class="col-xs-12 col-md-12">
          <form class="" role="search">
            <!-- <div class="input-group"> -->
              <input id="search-place-details-input" type="text" data-provide="typeahead" autocomplete="off" class="form-control" placeholder="Learn more about . . ."/>
              <input id="search-place-details-submit" type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;"/>
<!--               <div class="input-group-btn">
