<div id="my1Modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h3 class="modal-title" id="myModalLabel">Delete</h3>
      </div>
      <div class="modal-body">
          <p> Are you sure you want to delete <strong><span id="location"></span></strong>?</p>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" data-dismiss="modal" class="btn btn-danger" id="btnDelteYes">Confirm</button>
      </div>
    </div>
  </div>
</div> 


<!-- Place details modal -->
<div id="place-detail-overlay" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header row">
          <h3 class="modal-title col-xs-9" id="place-details-name-overlay"></h3>
          <button type="button" class="btn btn-default col-xs-3" data-dismiss="modal">Close</button>
        </div>
        <div class="modal-body">

            <!-- Place details -->
            <div id="place-details-overlay" class="row" style="display:none">

                <!-- Info -->
                <div class="place-details-inner col-xs-12 col-md-8">
                  <div id="hours-day-labels-overlay" class="col-xs-1 col-md-1">
                    <h6>M</h6>
                    <h6>T</h6>
                    <h6>W</h6>
                    <h6>Th</h6>
                    <h6>F</h6>
                    <h6>S</h6>
                    <h6>Su</h6>
                  </div>
                  <div id="hours-times-overlay" class="col-xs-5 col-md-6">
                    <h6 id="hours-times-m-overlay"></h6>
                    <h6 id="hours-times-t-overlay"></h6>
                    <h6 id="hours-times-w-overlay"></h6>
                    <h6 id="hours-times-th-overlay"></h6>
                    <h6 id="hours-times-f-overlay"></h6>
                    <h6 id="hours-times-s-overlay"></h6>
                    <h6 id="hours-times-su-overlay"></h6>
                  </div>
                  <div id="amenity-labels-overlay" class="col-xs-3 col-md-3">
                    <h6>Wi-Fi</h6>
                    <h6>Outlets</h6>
                    <h6>Coffee</h6>
                    <h6>Food</h6>
                  </div>
                  <div id="amenity-val-overlay" class="col-xs-1 col-md-1">
                    <h6 id="amenity-val-wifi-overlay"></h6>
                    <h6 id="amenity-val-outlets-overlay"></h6>
                    <h6 id="amenity-val-coffee-overlay"></h6>
                    <h6 id="amenity-val-food-overlay"></h6>
                  </div>
                </div>

                <!-- Map -->
                <div id="place-details-map-overlay" class="place-details-inner col-xs-12 col-md-4">
                    <iframe id="place-details-map-iframe-overlay" width="100%" height="200" frameborder="0" style="border:0"></iframe>
                </div>

            </div>
            <!-- End of place details -->

        </div>
    </div>
  </div>
</div>
<!-- End of modal -->

<div class="container">
  <h3>Favorites</h3>
  {{#if bookmarks}}
  <table class="table" id="bookmarksTable">
    <thead>
      <tr>
        <th><p>Location</p></th>
        <th data-sortable="false"></th>
      </tr>
    </thead>
    <tbody>
      {{#each bookmarks}}
      <tr class="btnDelete" data-id="{{name}}">
        <td><a class="placeName" href="#" data-toggle='modal' data-target="#place-detail-overlay"><h5>{{name}}</h5></a></td>
        <td><a href="#" class="btnDelete btn" data-target="#myModal">Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>  
  {{else}}
  <br />
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">You have not added anywhere to your favorites.</h3>
    </div>
    <div class="panel-body">
      Your favorite study spots will appear on this page. <br />
      Find a place to add to your favorites, <a href="/placeDetails">click here</a>.
    </div>
  </div>
{{/if}}
</div> <!--end of container -->

<script src="/js/delete-bookmarks.js"></script>
<script src="/js/show-fav-place-details.js"></script>
